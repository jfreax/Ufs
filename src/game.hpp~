#ifndef GAME_HPP
#define GAME_HPP

#include <SFML/Graphics.hpp>
#include "gui/manager.hpp"

#include "input.hpp"

class CGame
{
  public:
    CGame( int argc, char **argv );
    bool initialize();

    bool IsVideoModeValid();

    void start();
    void stop();

    void draw();

    sf::RenderWindow* getApp();
    gui::CManager* getGuiManager();

    void calcFPS();

    sf::String* getFpsStr();

  private:
    sf::RenderWindow App;

    const int argc_;
    int arg_;
    const char* const * const argv_;

    bool run;

    sf::View viewPoint;

    gui::CManager guiManager;
    Input input;

    sf::String fpsStr;

};


CGame* getGameClass();

#endif // GAME_HPP
